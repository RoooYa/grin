.item {
  background-color: #fff;
  position: relative;
  margin-bottom: 10px;
  word-break: break-all;
  word-wrap: break-word;
  padding: 10px 0;
}
.item-text {
  font-size: 18px;
  line-height: 26px;
  padding: 0 10px;
}
.item-img {
  padding: 0 10px;
}
.item-img, .item-video {
  margin-top: 8px;
}
.item-img .auto-box {
  display: inline-block;
  width: 33.33%;
  height: 8rem;
  box-sizing: border-box;
  padding: 0 2px 0 0;
}

.item-img .auto-box.image-1 {
  width: 100%;
  height: auto;
}
.item-img .auto-box.image-2 {
  width: 50%;
  max-height: 10rem;
}

.auto-box image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 4px;
}
.item-video {
  position: relative;
  text-align: center;
  background: #000;
  min-height: 4rem;
}
.item-video image {
  max-width: 100%;
  max-height: 17rem;
}
.item-video video{
 width: 100%;
}
.item-ft {
  padding: 10px 10px 0 10px;
}
.item-ft .box-icon {
  display: inline-block;
  width: 25%;
}
.item-ft .box-icon .act .iconfont, .item-ft .box-icon .act text  {
  color: #ffb400;
}

.item-ft .box-icon .iconfont{
  font-size: 20px;
  margin-right: 3px;
  float: left;
  color: #999;
}
.item-ft .box-icon text {
  font-size: 14px;
  color: #999;
  float: left;
  margin-top: 3px;
}

.item-ft .box-hover text, .item-ft .box-hover .iconfont{
  color: #ffb400;
}