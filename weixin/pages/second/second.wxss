.number {
  font-size: 70px;
  text-align: center;
  padding-top: 80px;
  color: #444;
}
.start {
  color: #fff;
  background: #ffb400;
  width: 100px;
  height: 100px;
  border-radius: 100%;
  margin: 80px auto 10px auto;
  text-align: center;
  line-height: 100px;
  font-size: 30px;
  transition: all .5s;
  box-shadow: 2px 2px 10px #999;
}
.start.end {
  background: #ff0000;
}
.info {
  text-align: center;
  font-size: 14px;
  color: #999;
  width: 100px;
  margin: 0 auto;
  padding: 5px 0;
}

.result {
  text-align: center;
  padding-top: 50px;
  font-size: 36px;
}

.result image {
  width: 80px;
  height: 80px;
}

.result label {
  color: #ffb400
}

.btn {
  width: 200px;
  background: #ffb400;
  color: #fff;
  border-radius: 25px;
  border:solid #ffb400 1px;
}